<!-- password-reset.fxml -->
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane fx:controller="com.group2.uno.controller.PasswordResetController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="/css/styles.css"
            styleClass="background">
    <center>
        <VBox alignment="CENTER" spacing="15" maxWidth="400">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            
            <Text styleClass="title-text" text="UNO Card Game" />
            <Text styleClass="subtitle-text" text="Reset Your Password" />
            
            <VBox spacing="10" fx:id="emailRequestPane">
                <Label text="Enter your email to receive a password reset link:" />
                <TextField fx:id="emailField" promptText="Email address" />
                
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Send Reset Link" onAction="#handleSendResetLink" styleClass="primary-button" />
                    <Button text="Back to Login" onAction="#handleBackToLogin" styleClass="secondary-button" />
                </HBox>
            </VBox>
            
            <VBox spacing="10" fx:id="resetConfirmPane" visible="false" managed="false">
                <Label text="Enter your reset token and new password:" />
                
                <Label text="Token:" />
                <TextField fx:id="tokenField" promptText="Reset token" />
                
                <Label text="New Password:" />
                <PasswordField fx:id="newPasswordField" promptText="New password" />
                
                <Label text="Confirm Password:" />
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password" />
                
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Reset Password" onAction="#handleResetPassword" styleClass="primary-button" />
                    <Button text="Back to Login" onAction="#handleBackToLogin" styleClass="secondary-button" />
                </HBox>
            </VBox>
            
            <Label fx:id="messageLabel" />
        </VBox>
    </center>
</BorderPane>