<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17"
            fx:controller="com.group2.uno.controller.LeaderboardController"
            stylesheets="/css/styles.css">
    <top>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20" />
            </padding>
            <Label text="Leaderboards" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="10" fx:id="leaderboardContainer">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20" />
            </padding>
            <Label fx:id="statusLabel" text="Loading leaderboard data..." style="-fx-text-fill: red;" />
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20" />
            </padding>
            <Button text="Back to Main Menu" onAction="#handleBackToMainMenu" />
        </HBox>
    </bottom>
</BorderPane>