<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ceng453.frontend.controller.LobbyController"
      prefHeight="600.0" prefWidth="800.0"
      spacing="10" alignment="CENTER">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Title -->
    <Label text="UNO Game Lobby" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <Separator/>
    
    <!-- Login/Register Section -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                   promptText="Enter username"/>
        
        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                   promptText="Enter email"/>
        
        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                      promptText="Enter password"/>
        
        <HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                    prefWidth="100"/>
            <Button fx:id="registerButton" text="Register" onAction="#handleRegister" 
                    prefWidth="100"/>
        </HBox>
    </GridPane>
    
    <Label fx:id="statusLabel" text="Please login or register to continue" 
           style="-fx-text-fill: #0066cc;"/>
    
    <Separator/>
    
    <!-- Game Creation/Joining Section -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        
        <Label text="Player Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="playerNameLobbyField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                   promptText="Your display name" editable="false"/>
        
        <Button fx:id="createGameButton" text="Create New Game" onAction="#handleCreateGame" 
                GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"
                prefWidth="200" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        
        <Label text="Game ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="gameIdField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                   promptText="Enter game ID to join"/>
        
        <Button fx:id="joinGameButton" text="Join Game" onAction="#handleJoinGame" 
                GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
                prefWidth="200" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
    </GridPane>
    
    <Separator/>
    
    <!-- Instructions -->
    <VBox alignment="CENTER" spacing="5">
        <Label text="How to Play:" style="-fx-font-weight: bold;"/>
        <Label text="1. Login with your username and password"/>
        <Label text="2. Create a new game or join an existing one using the Game ID"/>
        <Label text="3. When enough players join, the game will start automatically"/>
        <Label text="4. Take turns playing cards according to UNO rules"/>
        <Label text="5. First player to use all their cards wins!"/>
    </VBox>
    
</VBox>
